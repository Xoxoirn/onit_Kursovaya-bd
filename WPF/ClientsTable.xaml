        <Button Content="Удалить" HorizontalAlignment="Left" Margin="522,384,0,0" VerticalAlignment="Top" Width="204" FontSize="18" Click="Button_Click_1"/>
        <TextBox Name ="_TelNum" HorizontalAlignment="Left" Height="23" Margin="12,356,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" FontSize="18"/>
        <TextBox Name ="_FIO" HorizontalAlignment="Left" Height="23" Margin="10,308,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="153" FontSize="18"/>
        <Label Content="ФИО клиента:" HorizontalAlignment="Left" Margin="10,275,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Label Content="Номер телефона:" HorizontalAlignment="Left" Margin="10,323,0,0" VerticalAlignment="Top" FontSize="18" RenderTransformOrigin="0.414,0.324"/>
        <TextBox x:Name ="_TelNum_Copy" HorizontalAlignment="Left" Height="23" Margin="12,356,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" FontSize="18"/>
        <TextBox x:Name ="Search" HorizontalAlignment="Left" Height="23" Margin="264,311,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="153" FontSize="18"/>
        <Button Content="Найти" HorizontalAlignment="Left" Margin="264,384,0,0" VerticalAlignment="Top" Width="204" FontSize="18" Click="Button_Click_2"/>
        <Label Content="ФИО клиента:" HorizontalAlignment="Left" Margin="264,275,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Button Content="Убрать фильтр" HorizontalAlignment="Left" Margin="264,352,0,0" VerticalAlignment="Top" Width="195" FontSize="18" Click="Button_Click_3"/>

    </Grid>
</Window>
